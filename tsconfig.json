{
    "compilerOptions": {
      "target": "ES2020",              // modern JS
      "module": "CommonJS",            // ‚Üê use CommonJS modules
      "rootDir": "src",                // your source lives here
      "outDir": "dist",                // compiled .js output (if you ever build)
      "strict": true,
      "esModuleInterop": true,         // allows `import x from 'y'`
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }
  